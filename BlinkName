int sam_led = D7;
int sam_button = D6;



void setup()
{
  pinMode( sam_button ,INPUT_PULLUP); 
  pinMode( sam_led , OUTPUT ); 
}



void loop()
{
   int buttonStatus = digitalRead( sam_button );
   //控制按键状态
   bool tryBlink = false;
  if( buttonStatus == HIGH &!tryBlink )
  { 
          tryBlink = true;
      
     {digitalWrite(sam_led, HIGH);
        delay(250ms);
        digitalWrite(sam_led, LOW);
        delay(250ms);
    
        digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	//first name F
    	
    	digitalWrite(sam_led, LOW);
    	delay(3s);
    	//gap of each letter
    	//隔断
    	
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	//first name A
    	
    	digitalWrite(sam_led, LOW);
    	delay(3s);
    	//gap of each letter
    	//隔断 
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	//first name N
    	
    	digitalWrite(sam_led, LOW);
    	delay(3s);
    	//gap of each letter
    	//隔断
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	//first name G
    	
    	digitalWrite(sam_led, LOW);
    	delay(3s);
    	//gap of each letter
    	//隔断 
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	//first name Z
    	
    	digitalWrite(sam_led, LOW);
    	delay(3s);
    	//gap of each letter
    	//隔断
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	//first name H
    	
    	digitalWrite(sam_led, LOW);
    	delay(3s);
    	//gap of each letter
    	//隔断 
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	//first name O
    	
    	digitalWrite(sam_led, LOW);
    	delay(3s);
    	//gap of each letter
    	//隔断 
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	
    	digitalWrite(sam_led, HIGH);
        delay(250ms);
    	digitalWrite(sam_led, LOW);
    	delay(250ms);
    	
    	digitalWrite(sam_led, HIGH);
        delay(2s);
    	digitalWrite(sam_led, LOW);
    	delay(2s);
    	//first name U
    	
    
  }}
  else{
    tryBlink = false;
    digitalWrite( sam_led, LOW);
    
  }


}
